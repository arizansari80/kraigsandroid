<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="5dp"
		android:orientation="horizontal"
		android:paddingLeft="9dp"
		android:paddingRight="9dp">

		<TextView
			style="@style/labelFontStyle"
			android:layout_width="0dp"
			android:layout_height="20dp"
			android:layout_weight="3"
			android:text="@string/alarm_analyze_alarm_time_caption"
			tools:ignore="Suspicious0dp" />

		<TextView
			android:id="@+id/alarmTimeValue"
			style="@style/labelInfoFontStyle"
			android:layout_width="0dp"
			android:layout_height="20dp"
			android:layout_weight="6"
			tools:ignore="Suspicious0dp"/>

	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:paddingLeft="9dp"
		android:paddingRight="9dp">

		<TextView
			style="@style/labelFontStyle"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:gravity="center_vertical"
			android:layout_weight="3"
			android:text="@string/alarm_analyze_alarm_label_caption"
			tools:ignore="Suspicious0dp"/>

		<TextView
			android:id="@+id/alarmLabelValue"
			style="@style/labelInfoFontStyle"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="6"
			tools:ignore="Suspicious0dp"/>

	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:paddingLeft="9dp"
		android:paddingRight="9dp">

		<TextView
			style="@style/labelFontStyle"
			android:layout_width="0dp"
			android:layout_height="20dp"
			android:layout_weight="3"
			android:text="@string/alarm_analyze_action_time_caption"
			tools:ignore="Suspicious0dp"/>

		<TextView
			android:id="@+id/actionTimeValue"
			style="@style/labelInfoFontStyle"
			android:layout_width="0dp"
			android:layout_height="20dp"
			android:layout_weight="6"
			tools:ignore="Suspicious0dp"/>

	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:paddingLeft="9dp"
		android:paddingRight="9dp">

		<TextView
			style="@style/labelFontStyle"
			android:layout_width="0dp"
			android:layout_height="20dp"
			android:layout_weight="3"
			android:text="@string/alarm_analyze_action_taken_caption"
			tools:ignore="Suspicious0dp"/>

		<TextView
			android:id="@+id/actionTakenValue"
			style="@style/labelInfoFontStyle"
			android:layout_width="0dp"
			android:layout_height="20dp"
			android:layout_weight="6"
			tools:ignore="Suspicious0dp"/>

	</LinearLayout>

</LinearLayout>